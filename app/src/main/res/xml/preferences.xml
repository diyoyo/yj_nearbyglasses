<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/titleCategoryScanningSettings"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="foreground_service"
            android:summary="@string/summaryForeground"
            android:title="@string/titleForeground"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:defaultValue="-75"
            android:inputType="numberSigned"
            android:key="rssi_threshold"
            android:summary="@string/summaryThreshold"
            android:title="@string/titleThreshold"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="false" />

        <ListPreference
            android:key="app_language"
            android:title="@string/pref_language_title"
            android:summary="@string/pref_language_summary"
            android:entries="@array/pref_language_entries"
            android:entryValues="@array/pref_language_values"
            android:defaultValue="" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/titleCategoryNotifications"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="enable_notifications"
            android:summary="@string/summaryNotifications"
            android:title="@string/titleNotifications"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:defaultValue="10000"
            android:inputType="number"
            android:key="cooldown_ms"
            android:summary="@string/summaryCooldown"
            android:title="@string/titleCooldown"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/titleCategoryLogging"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="logging_enabled"
            android:summary="@string/summaryLogging"
            android:title="@string/titleLogging"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="debug_enabled"
            android:summary="@string/summaryDebug"
            android:title="@string/titleDebug"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:key="debug_max_lines"
            android:title="@string/titleDebugSize"
            android:summary="@string/summaryDebugSize"
            android:defaultValue="200"
            android:dependency="debug_enabled"
            android:inputType="number"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:key="debug_advonly"
            android:title="@string/titleDebugAdvonly"
            android:summary="@string/summaryDebugAdvonly"
            android:defaultValue="false"
            android:dependency="debug_enabled"
            app:iconSpaceReserved="false"/>

        <EditTextPreference
            android:key="debug_company_ids"
            android:title="@string/titleDebugCompanyIds"
            android:summary="@string/summaryDebugCompanyIds"
            android:defaultValue=""
            android:dependency="debug_enabled"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/titleCategoryAbout"
        app:iconSpaceReserved="false">

        <Preference
            android:summary="@string/summaryApp"
            android:title="@string/app_name"
            app:iconSpaceReserved="false" />

        <Preference
            android:summary="@string/summaryMethod"
            android:title="@string/titleMethod"
            app:iconSpaceReserved="false" />

        <ch.pocketpc.nearbyglasses.HtmlPreference
            android:summary="@string/summaryLiability"
            android:key="liability"
            android:title="@string/titleLiability"
            app:iconSpaceReserved="false"
            android:layout="@layout/preference_long_summary" />

    </PreferenceCategory>

</PreferenceScreen>
